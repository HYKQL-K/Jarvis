{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Jarvis Tool Call",
  "type": "object",
  "required": ["name", "arguments"],
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string",
      "description": "Tool identifier to invoke."
    },
    "callId": {
      "type": "string",
      "description": "Opaque call correlation id.",
      "minLength": 1
    },
    "arguments": {
      "type": "object",
      "description": "Parameters for the tool invocation.",
      "additionalProperties": true
    }
  }
}
